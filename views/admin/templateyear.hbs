  <body>
    <section class=" m-4" >
 
        <div class=" p-3 mt-4" style="background-color: rgb(211, 218, 219); border-radius: 10px;">
            <div class="" >
               <h3 class="me-3">Yearly Sales</h3>
                
            </div>
    
       <table class="table mt-6" id="reportTable" > 
      <thead>
        <tr>
          <th scope="col">Year</th>
          <th scope="col" style="margin-left: 100px;">Total Sale</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{this._id}}</td>
          <td style="margin-left: 100px;">{{this.totalSaleAmount}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
        </div>
    </section>
    
      <script>
     $(document).ready(function() {
    var table = $('#reportTable').DataTable( {
        lengthChange: false,
        buttons: [ 'copy', 'excel', 'pdf', 'colvis' ]
    } );
 
    table.buttons().container()
        .appendTo( '#reportTable_wrapper .col-md-6:eq(0)' );
} );
      </script>
