<section>
    <img src="/banner/img-banner-offer.webp" alt="" class="d-flex justify-content-center"></section>
    <section>
        <div class="row m-5">
            <div>
                <h2>Order Id :
                    {{ orderId }}</h2>
            </div>
            <div>
                <h5>Total Amount : Rs
                    {{ total }}</h5>
            </div>
        </div>
    </section>
    <section class="container">
        <div class="ibox d-flex justify-content-center">
            <div class="ibox-title">
                <h5>Items in your cart</h5>
            </div>
            <div class="ibox-content mt-5">
                <div class="table-responsive">
                    <table class="table shoping-cart-table">
                        <tbody>
                            {{#each products}}
                                <tr class="mt-3">
                                    <td width="200">
                                        <div class="">
                                            <img class="img-fluid" src="/product-images/{{ this.product.img_path.[0] }}" alt=""></div>
                                        </td>
                                        <td class="desc" style="width: 200px;">
                                            <h3>
                                                <a href="/view-product/{{ this.product._id }}" class="text-navy">
                                                    {{ this.product.title }}
                                                </a>
                                            </h3>
                                            <p class="small">
                                                {{ this.product.description }}

                                            </p>
                                        </td>
                                      

                                        <td width="65" height="50" class="d-flex justify-content-between"></td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="ibox-content">
                    <a href="/">
                        <button class="btn btn-white">
                            <i class="fa fa-arrow-left"></i>
                            Continue shopping</button>
                    </a>
                </div>
            </div>
        </section>
